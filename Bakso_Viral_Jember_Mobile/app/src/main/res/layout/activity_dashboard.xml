<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:padding="0dp"
            android:gravity="center"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Bakso Viral Jember"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekomendasi Menu"
        android:textColor="@color/black"
        android:layout_marginLeft="18dp"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:text="Lihat Lainnya"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bakso Corona"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="28dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/corona" />

            </RelativeLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Rp. 10.000"
                android:layout_marginTop="130dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"/>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bakso Swab"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="35dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/swab" />


            </RelativeLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Rp. 10.000"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="50dp"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bakso Positif"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/positif" />

            </RelativeLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Rp. 10.000"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="50dp"/>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bakso Telur"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="35dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/telur" />


            </RelativeLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Rp. 8.000"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="50dp"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Apk V.0.01 - Bakso Viral Jember"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


</LinearLayout>